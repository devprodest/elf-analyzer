{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/components/*.ts",
    "src/components/*",
    "src/components/*.vue",
    "../common/**/*.ts",
    "../common/**/*",
    "../common/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}